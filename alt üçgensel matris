#include<stdio.h>
#include<stdlib.h>

int main()
{
 int i,j;
 int a[3][3];  
 int b[3][3]; 

   for(i=0;i<3;i++) 
  {  
   for(j=0;j<3;j++) 
   {              
   printf("a[%d][%d]=", i+1,j+1); 
    scanf("%d",&a[i][j]); 
   }
  }

  printf("b üçgensel matris\n");
  for(i=0;i<3;i++)
  {
   for(j=0;j<3;j++)
   { 
       if(j>=i){            
           printf("\t%d\t",b[i][j]); 
       }else{
           printf("\t%d\t",0); 
       }
   }
   printf("\n"); 
  } 
  
  system("PAUSE");
 return 0; 
 }
 
 



	
 
