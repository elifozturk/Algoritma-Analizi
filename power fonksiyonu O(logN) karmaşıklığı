#include <stdio.h>
#include <stdlib.h>

long us_alma(int m, int n){
     if(n==0) return 1;
     if(n==1) return m;
     if(n%2==0){
           return us_alma(m*m, n/2);         
     }else{
           return us_alma(m*m, n/2)*m;
     }    
}

int main(int argc, char *argv[])
{
    int a, b,c;
     printf("ilk sayiyi gir:");
     scanf("%d",&a);
     printf("kuvveti gir:");
     scanf("%d",&b);
     c=us_alma(a,b);
     printf("sonuc= %d\n",c);
  
  system("PAUSE");	
  return 0;
}
